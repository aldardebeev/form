{# templates/person/form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ 'form.title'|trans }}</h1>
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.firstname, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.firstname, {'attr': {'class': 'invalid-feedback'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.lastname, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.lastname, {'attr': {'class': 'invalid-feedback'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback'}}) }}
                </div>
                <button class="btn btn-primary">{{ 'form.submit'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
